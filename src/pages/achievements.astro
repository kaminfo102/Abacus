---
import Layout from '@/layouts/Layout.astro';
import { AchievementCard } from '@/components/achievements/AchievementCard';

const achievements = [
  {
    name: 'محاسبه‌گر نخبه',
    description: 'کسب نمره کامل در ۵ آزمون متوالی',
    icon: 'Trophy',
    isUnlocked: true,
    progress: 100,
  },
  {
    name: 'سرعت عمل',
    description: 'تکمیل ۱۰ آزمون در کمتر از ۲ دقیقه',
    icon: 'Timer',
    isUnlocked: false,
    progress: 60,
  },
  // Add more achievements...
];
---

<Layout title="دستاوردها">
  <main class="container mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-8">دستاوردها</h1>
    
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {achievements.map((achievement) => (
        <AchievementCard {...achievement} client:load />
      ))}
    </div>
  </main>
</Layout>